
<% @accent.errors.full_messages.each do |error| %>
  <h3><%= error %></h3>
<% end %>


<h3>Submit A New Accent</h3>

<%= form_tag '/accents', method: :post do %>
  <div>
    <%= label_tag :name %>
    <%=  text_field_tag :name,  @accent.name %>
  </div>

  <div>
    <%= label_tag :price %>
    <%=  text_field_tag :price,  @accent.price %>
  </div>

  <div>
    <%= label_tag :image %>
    <%=  text_field_tag :image %>
  </div>

    <div>
    <%= label_tag :image_2 %>
    <%=  text_field_tag :image_2 %>
  </div>


  <div>
    <%= label_tag :supplier_id %>
    <%= collection_select :supplier, :supplier_id, Supplier.all, :id, :name %>
  </div>

  <div>
    <%= label_tag :description %>
    <%=  text_field_tag :description,  @accent.description %>
  </div>

  <button type="submit" class="btn btn-default">Submit</button>

  <% end %>