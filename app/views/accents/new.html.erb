<h3>Submit A New Accent</h3>

<%= form_tag '/accents', method: :post do %>
  <div>
    <%= label_tag :name %>
    <%=  text_field_tag :name %>
  </div>

    <div>
    <%= label_tag :price %>
    <%=  text_field_tag :price %>
  </div>

    <div>
    <%= label_tag :image %>
    <%=  text_field_tag :image %>
  </div>

    <div>
    <%= label_tag :description %>
    <%=  text_field_tag :description %>
  </div>

  <button type="submit" class="btn btn-default">Submit</button>

  <% end %>