<h1>Edit an accent</h1>

<%= form_tag "/accents/#{ @accent.id }", method: :patch do %>
  <div>
    <%= label_tag :name %>
    <%=  text_field_tag :name, @accent.name %>
  </div>

    <div>
    <%= label_tag :price %>
    <%=  text_field_tag :price, @accent.price %>
  </div>

  <div>
    <%= label_tag :image %>
    <%=  text_field_tag :image, @accent.image %>
  </div>

    <div>
    <%= label_tag :description %>
    <%=  text_field_tag :description, @accent.description %>
  </div>

  <button type="submit" class="btn btn-default">Submit</button>

  <% end %>